<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bghub="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.sfilizzola.bghub.ProfileFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/profile_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        bghub:cardCornerRadius="0dp"
        bghub:cardPreventCornerOverlap="false"
        bghub:contentPaddingBottom="16dp"
        bghub:contentPaddingLeft="5dp"
        bghub:contentPaddingRight="5dp"
        bghub:contentPaddingTop="16dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/placeh" />

            <TextView
                android:id="@+id/profile_displayName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profile_picture"
                android:layout_toRightOf="@+id/profile_picture"
                android:text="Display Name"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_displayName"
                android:layout_toRightOf="@+id/profile_picture"
                android:text="Username" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_username"
                android:layout_toRightOf="@+id/profile_picture"
                android:text="E-mail" />

            <android.support.v7.widget.CardView
                android:id="@+id/profile_card_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/profile_email"
                bghub:cardCornerRadius="0dp"
                bghub:cardPreventCornerOverlap="false"
                bghub:contentPadding="6dp"
                android:layout_marginRight="15dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/profile_text_games_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:text="My Collection"

                        />

                    <TextView
                        android:id="@+id/profile_text_games_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_text_games_label"
                        android:layout_centerInParent="true"
                        android:text="45" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/profile_card_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_card_games"
                android:layout_below="@id/profile_email"
                bghub:cardCornerRadius="0dp"
                bghub:cardPreventCornerOverlap="false"
                bghub:contentPadding="6dp"
                android:layout_marginRight="15dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/profile_text_following_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:text="Following"

                        />

                    <TextView
                        android:id="@+id/profile_text_following_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_text_following_label"
                        android:layout_centerInParent="true"
                        android:text="12" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/profile_card_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_card_following"
                android:layout_below="@id/profile_email"
                bghub:cardCornerRadius="0dp"
                bghub:cardPreventCornerOverlap="false"
                bghub:contentPadding="6dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/profile_text_follower_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:text="Followers"

                        />

                    <TextView
                        android:id="@+id/profile_text_follower_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_text_follower_label"
                        android:layout_centerInParent="true"
                        android:text="18" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <view
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_recycler_view"
        android:layout_below="@id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="android.support.v7.widget.RecyclerView"/>

</FrameLayout>
