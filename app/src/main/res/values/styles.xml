<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/bgHubPrimaryBackgroundColor</item>
        <item name="colorPrimaryDark">@color/bgHubSecondaryBackgroundColor</item>
        <item name="colorAccent">@color/bgHubColorBackgroundAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bgHubBackgroundColor</item>
    </style>

    <style name="Theme.BGHub" parent="Theme.Base"/>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/bgHubToolBarTitleColor</item>
        <item name="colorControlHighlight">@color/bgHubBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/bgHubToolBarTitleColor</item>
        <item name="android:textColorSecondary">@color/bgHubToolBarTitleColor</item>
        <item name="android:background">@color/bgHubPrimaryBackgroundColor</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bgHubToolBarTitleColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GameDetailTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bgHubPrimaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GameDetailSubTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bgHubSecondaryTextColor</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GameDetailItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="GameDetailDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/bgHubFloatingButton</item>
    </style>

</resources>
